<style>
    body, html {
        height: 100%;
        margin: 0;
        overflow: hidden;
        font-family: "Ubuntu Sans", sans-serif;
    }
    @font-face {
        font-family: "Ubuntu Sans";
        src: url('ubuntu-sans.woff2') format('woff2'),
             url('ubuntu-sans.woff') format('woff');
        font-weight: normal;
        font-style: normal;
    }
    #canvas {
        position: relative;
        width: 100%;
        height: 100%;
        background-color: white;
        transition: background-color 5s ease;
    }
    #heart {
        position: absolute;
        top: calc(50% - 50px);
        left: calc(50% - 50px);
        width: 100px;
        height: 100px;
        z-index: 1;
        transition: width 5s ease, height 5s ease;
    }
    #click-message {
        position: absolute;
        top: calc(50% + 60px);
        left: 50%;
        transform: translateX(-50%);
        font-size: 18px;
        color: #333;
        text-align: center;
        z-index: 1;
        opacity: 1;
        transition: opacity 1s ease;
    }
    #bar-container {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0;
        height: 100%;
        overflow: hidden;
        z-index: 0;
        transition: width 1s ease;
    }
    #bar {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        transition: background-color 5s ease;
    }
    #text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        font-size: 24px;
        color: white;
        opacity: 0;
        transition: opacity 5s ease;
    }
    #image-container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        display: none;
        transition: opacity 5s ease;
    }
    #spotify-container {
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        display: none;
        transition: opacity 5s ease;
